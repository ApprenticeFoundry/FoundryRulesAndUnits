    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>ApprenticeFoundryRulesAndUnits</PackageId>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Copyright>Copyright Â© 2020</Copyright>
    <Version>1.2.0</Version>
